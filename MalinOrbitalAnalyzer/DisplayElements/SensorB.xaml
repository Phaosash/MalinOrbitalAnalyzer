<UserControl x:Class="MalinOrbitalAnalyzer.DisplayElements.SensorB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MalinOrbitalAnalyzer.DisplayElements"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--    Title   -->
        <TextBlock Text="Sensor B" FontSize="24" FontWeight="SemiBold" 
                   Grid.Column="0" Grid.Row="0" Margin="5"/>
        
        <!--    Left hand side content      -->
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="0" Grid.Row="1">
            <!--    Iterative Binary Search Section     -->
            <StackPanel Orientation="Vertical">
                <TextBlock FontSize="16" Text="Iterative Binary Search"
                       FontWeight="SemiBold"/>

                <Button Margin="0,10,0,0">
                    <Label Content="Search" />
                </Button>

                <!--    Processing time     -->
                <TextBox Margin="0,10,0,0" FontSize="16" />
            </StackPanel>

            <!--    Recursive Binary Search Section     -->
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock FontSize="16" Text="Recursive Binary Search"
                       FontWeight="SemiBold"/>

                <Button Margin="0,10,0,0">
                    <Label Content="Search" />
                </Button>

                <!--    Processing time     -->
                <TextBox Margin="0,10,0,0" FontSize="16" />

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text=" Search Target" FontSize="16" />
                    <TextBox Margin="10,0,0,0" FontSize="16"
                         Width="100"/>
                </StackPanel>
            </StackPanel>

            <!--    Selection Sort Section     -->
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock FontSize="16" Text="Selection Sort"
                       FontWeight="SemiBold"/>

                <Button Margin="0,10,0,0">
                    <Label Content="Sort" />
                </Button>

                <!--    Processing time     -->
                <TextBox Margin="0,10,0,0" FontSize="16" />
            </StackPanel>

            <!--    Insertion Sort Section     -->
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock FontSize="16" Text="Selection Sort"
           FontWeight="SemiBold"/>

                <Button Margin="0,10,0,0">
                    <Label Content="Sort" />
                </Button>

                <!--    Processing time     -->
                <TextBox Margin="0,10,0,0" FontSize="16" />
            </StackPanel>
        </StackPanel>
        <!--  End left hand side      -->

        <!--    Right hand side content     -->
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="1" Grid.Row="1">
            <!--    Displays the sensor data    -->
            <ListBox />
        </StackPanel>
        <!--  End RIght Side Content      -->
    </Grid>
</UserControl>
