<UserControl x:Class="MalinOrbitalAnalyzer.DisplayElements.CombinedData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MalinOrbitalAnalyzer.DisplayElements"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="450">
    <Grid>
        <!--    Header section      -->
        <StackPanel Orientation="Vertical" Margin="5" 
                    HorizontalAlignment="Center" VerticalAlignment="Top">
            <!--    Numeric Controls        -->
            <StackPanel Orientation="Horizontal">
                <!--    Sigma controls      -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Sigma" Margin="5" FontSize="18"
                               HorizontalAlignment="Center" />
                    
                    <xctk:IntegerUpDown x:Name="Sigma" Minimum="100"
                                        Maximum="900" Increment="10"
                                        Value="100" FontSize="16"
                                        Width="130" Margin="10"/>
                </StackPanel>

                <!--    Mu controls     -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Mu" Margin="5" FontSize="18"
                               HorizontalAlignment="Center" />

                    <xctk:IntegerUpDown x:Name="Mu" Minimum="100"
                                        Maximum="900" Increment="10"
                                        Value="100" FontSize="16"
                                        Width="130" Margin="10"/>
                </StackPanel>
                
                
            </StackPanel>
            
            <!--    Load sensor data button     -->
            <Button Margin="10">
                <Label Content="Load Sensor Data" FontSize="16" />
            </Button>

            <!--    Main Section        -->
            <StackPanel Margin="10" Orientation="Vertical">
                <ListView>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Sensor A" Width="125"  />
                            <GridViewColumn Header="Sensor B" Width="125" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
            <!--  End main section    -->
        </StackPanel> <!--  End Header Section      -->     
    </Grid>
</UserControl>