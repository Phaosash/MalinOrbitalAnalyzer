<UserControl x:Class="MalinOrbitalAnalyzer.Views.SensorAView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MalinOrbitalAnalyzer.Views"
             xmlns:vm="clr-namespace:MalinOrbitalAnalyzer.ViewModels" 
             d:DataContext="{d:DesignInstance Type=vm:SensorAViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="453">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--    Title   -->
        <TextBlock Text="Sensor A" FontSize="24" FontWeight="SemiBold" 
           Grid.Column="0" Grid.Row="0" Margin="5"/>

        <!--    Left hand side content      -->
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="0" Grid.Row="1">
            <!--    Iterative Binary Search Section     -->
            <StackPanel Orientation="Vertical">
                <TextBlock FontSize="16" Text="Iterative Binary Search"
                   FontWeight="SemiBold"/>

                <Button x:Name="BtnIterativeSearchA" Margin="0,10,0,0"
                Command="">
                    <Label Content="Search" />
                </Button>

                <!--    Processing time     -->
                <TextBox x:Name="IterativeTimeA" Margin="0,10,0,0" 
                 FontSize="16" IsReadOnly="True" />
            </StackPanel>

            <!--    Recursive Binary Search Section     -->
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock FontSize="16" Text="Recursive Binary Search"
                   FontWeight="SemiBold"/>

                <Button x:Name="BtnRecursiveSearchA" Margin="0,10,0,0">
                    <Label Content="Search" />
                </Button>

                <!--    Processing time     -->
                <TextBox x:Name="RecursiveTimeA" Margin="0,10,0,0" 
                         FontSize="16" IsReadOnly="True" />

                <!--    Search Target   -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text=" Search Target" FontSize="16" />

                    <!--    Programming requirements 4.14   -->
                    <TextBox Margin="10,0,0,0" FontSize="16" Width="100" />
                </StackPanel>
            </StackPanel>

            <!--    Selection Sort Section     -->
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock FontSize="16" Text="Selection Sort"
                   FontWeight="SemiBold"/>

                <Button x:Name="BtnSelectionSortA" Margin="0,10,0,0"
                Command="">
                    <Label Content="Sort" />
                </Button>

                <!--    Processing time     -->
                <TextBox x:Name="SelectionTimeA" Margin="0,10,0,0" 
                 FontSize="16" IsReadOnly="True"
                 Text=""/>
            </StackPanel>

            <!--    Insertion Sort Section     -->
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock FontSize="16" Text="Insertion Sort"
                   FontWeight="SemiBold"/>

                <Button x:Name="BtnInsertionSortA" Margin="0,10,0,0"
                Command="">
                    <Label Content="Sort" />
                </Button>

                <!--    Processing time     -->
                <TextBox x:Name="InsertionTimeA" Margin="0,10,0,0" 
                 FontSize="16" IsReadOnly="True"
                 Text="" />
            </StackPanel>
        </StackPanel>
        <!--  End left hand side      -->

        <!--    Right hand side content     -->
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="1" Grid.Row="1">
            <!--    Displays the sensor data    -->
            <ListBox x:Name="ListBoxSensorA" HorizontalAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Height="625" HorizontalContentAlignment="Center"
                     ItemsSource="{Binding ListBoxItems}"/>
        </StackPanel>
    </Grid>
</UserControl>